---
// src/layouts/Layout.astro
import NavBar from '../components/NavBar.astro';
import '../styles/global.css';
const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>InflvxDev</title>
		<script is:inline>
			(() => {
			  const savedTheme = localStorage.getItem("theme");
			  const systemPrefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
			  const isDark = savedTheme === "dark" || (savedTheme === null && systemPrefersDark);
			  document.documentElement.classList.toggle("dark", isDark);
			})();
		</script>
	</head>
	<body >
		<NavBar />
		<main>
			<slot />
		</main>
		<footer class="p-6 text-center text-gray-600 bg-gray-100 dark:text-gray-400 dark:bg-gray-900 transition-colors duration-300">
			Â© 2025 - InflvxDev
		  </footer>
				
	</body>
</html>
