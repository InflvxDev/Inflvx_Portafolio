---
const links = [
  { name: "Experiencia", path: "#experiencia" },
  { name: "Proyectos", path: "#proyectos" },
  { name: "Contacto", path: "#contacto" },
];
---
<nav id="navbar" class="fixed top-0 w-full z-50 backdrop-blur-md bg-background/90 shadow-lg transition-all duration-300">
  <div class="container mx-auto flex justify-between items-center py-4 px-6">
    
    <!-- Nombre a la izquierda con efecto especial -->
    <a href="#inicio" class="text-foreground text-2xl font-bold tracking-wide hover:text-primary transition-all duration-300 relative group">
      InflvxDev
      <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary to-foreground transition-all duration-300 group-hover:w-full"></span>
    </a>

    <!-- Enlaces para desktop -->
    <div class="hidden md:flex items-center space-x-8">
      <ul class="flex space-x-8">
        {links.map((link, index) => (
          <li class="relative">
            <a
              href={link.path}
              class="text-foreground hover:text-primary transition-all duration-300 font-semibold text-lg tracking-wide px-4 py-2 rounded-lg relative group"
            >
              {link.name}
              <span class="absolute -bottom-1 left-1/2 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full group-hover:left-0"></span>
            </a>
            {index < links.length - 1 && (
              <span class="absolute right-[-16px] top-1/2 transform -translate-y-1/2 w-[1px] h-6 bg-gradient-to-b from-transparent via-foreground/20 to-transparent"></span>
            )}
          </li>
        ))}
      </ul>
    </div>

    <!-- Botón hamburguesa para mobile -->
    <button id="mobile-menu-button" class="md:hidden flex flex-col justify-center items-center w-8 h-8 space-y-1.5 group">
      <span class="block w-6 h-0.5 bg-foreground transition-all duration-300 group-hover:bg-primary transform group-hover:rotate-45 group-hover:translate-y-2"></span>
      <span class="block w-6 h-0.5 bg-foreground transition-all duration-300 group-hover:bg-primary group-hover:opacity-0"></span>
      <span class="block w-6 h-0.5 bg-foreground transition-all duration-300 group-hover:bg-primary transform group-hover:-rotate-45 group-hover:-translate-y-2"></span>
    </button>
  </div>

  <!-- Menú mobile -->
  <div id="mobile-menu" class="md:hidden hidden bg-background/20 backdrop-blur-xl border-t border-background/30 shadow-2xl">
    <ul class="py-4">
      {links.map((link, index) => (
        <li class="relative">
          <a
            href={link.path}
            class="mobile-link block text-foreground hover:text-primary hover:bg-background/30 transition-all duration-300 font-semibold text-lg tracking-wide px-6 py-3 relative group"
          >
            {link.name}
            <span class="absolute bottom-2 left-6 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-8"></span>
          </a>
          {index < links.length - 1 && (
            <div class="mx-6 h-[1px] bg-gradient-to-r from-transparent via-background/40 to-transparent"></div>
          )}
        </li>
      ))}
    </ul>
  </div>
  
  <!-- Línea animada debajo del navbar -->
  <div class="h-1 bg-gradient-to-r from-primary via-foreground to-primary relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-background/30 to-transparent animate-shimmer"></div>
  </div>
</nav>

<style>
  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
  
  .animate-shimmer {
    animation: shimmer 3s ease-in-out infinite;
  }

  /* Animación mejorada para el menú mobile */
  #mobile-menu {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transform: translateY(-20px);
    transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  #mobile-menu.show {
    display: block;
    max-height: 300px;
    opacity: 1;
    transform: translateY(0);
  }

  #mobile-menu.closing {
    max-height: 0;
    opacity: 0;
    transform: translateY(-20px);
    transition: all 0.3s ease-in-out;
  }

  /* Animación mejorada del botón hamburguesa */
  #mobile-menu-button.active span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
    background: var(--primary);
  }

  #mobile-menu-button.active span:nth-child(2) {
    opacity: 0;
    transform: scale(0);
  }

  #mobile-menu-button.active span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
    background: var(--primary);
  }

  /* Efecto mejorado para los elementos del menú mobile */
  .mobile-link {
    transform: translateX(-30px);
    opacity: 0;
    transition: all 0.3s ease-out;
  }

  #mobile-menu.show .mobile-link {
    animation: slideInLeft 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  #mobile-menu.closing .mobile-link {
    animation: slideOutRight 0.3s ease-in-out forwards;
  }

  .mobile-link:nth-child(1) { animation-delay: 0.1s; }
  .mobile-link:nth-child(2) { animation-delay: 0.15s; }
  .mobile-link:nth-child(3) { animation-delay: 0.2s; }

  @keyframes slideInLeft {
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideOutRight {
    from {
      transform: translateX(0);
      opacity: 1;
    }
    to {
      transform: translateX(30px);
      opacity: 0;
    }
  }

  /* Responsive breakpoints */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>

<script is:inline>
  // Verificar si el script ya se ha ejecutado para evitar duplicados
  if (!window.navbarInitialized) {
    window.navbarInitialized = true;
    
    // Efecto de cambio de navbar al hacer scroll
    window.addEventListener('scroll', () => {
      const navbar = document.getElementById('navbar');
      if (window.scrollY > 50) {
        navbar.classList.add('bg-background/95', 'shadow-xl');
      } else {
        navbar.classList.remove('bg-background/95', 'shadow-xl');
      }
    });

    // Funcionalidad mejorada del menú mobile
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    let isAnimating = false;

    function openMenu() {
      if (isAnimating) return;
      isAnimating = true;
      
      mobileMenu.classList.remove('closing');
      mobileMenu.classList.add('show');
      mobileMenuButton.classList.add('active');
      
      setTimeout(() => {
        isAnimating = false;
      }, 400);
    }

    function closeMenu() {
      if (isAnimating) return;
      isAnimating = true;
      
      mobileMenu.classList.add('closing');
      mobileMenuButton.classList.remove('active');
      
      setTimeout(() => {
        mobileMenu.classList.remove('show', 'closing');
        isAnimating = false;
      }, 300);
    }

    mobileMenuButton.addEventListener('click', () => {
      if (mobileMenu.classList.contains('show')) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    // Cerrar menú mobile al hacer clic en un enlace
    const mobileLinks = document.querySelectorAll('.mobile-link');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        closeMenu();
      });
    });

    // Cerrar menú mobile al hacer clic fuera de él
    document.addEventListener('click', (e) => {
      if (!mobileMenu.contains(e.target) && !mobileMenuButton.contains(e.target)) {
        if (mobileMenu.classList.contains('show')) {
          closeMenu();
        }
      }
    });

    // Scroll suave para todos los enlaces
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = anchor.getAttribute('href');
        const targetElement = document.querySelector(targetId);
        
        if (targetElement) {
          targetElement.scrollIntoView({ 
            behavior: 'smooth',
            block: 'start' 
          });
          history.pushState(null, null, targetId);
        }
      });
    });

    // Cerrar menú al cambiar el tamaño de ventana
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 768) {
        if (mobileMenu.classList.contains('show')) {
          closeMenu();
        }
      }
    });
  }
</script>