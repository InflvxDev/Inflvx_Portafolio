---
interface Props {
  project: {
    title: string;
    description: string;
    tags: string[];
    images: string[];
    link?: string;
    repo?: string;
    web?: string;
  };
  size?: string;
}

const { project, size = '' } = Astro.props as Props;
const cardId = `carousel-${project.title.replace(/\s+/g, '-').toLowerCase()}-${Math.random().toString(36).substr(2, 9)}`;
const hasMultipleImages = project.images.length > 1;
const hasLinks = project.link || project.repo || project.web;
---

<article class="bento-box h-full flex flex-col overflow-hidden group p-5">
  <!-- Carrusel de imagenes -->
  {project.images.length > 0 && (
    <div class="relative overflow-hidden rounded-xl mb-4 h-40 md:h-44" id={cardId}>
      <div class="carousel-container relative w-full h-full">
        {project.images.map((img, idx) => (
          <img 
            src={img} 
            alt={`${project.title} - ${idx + 1}`}
            loading="lazy"
            class={`carousel-slide absolute inset-0 w-full h-full object-cover transition-opacity duration-300 ${idx === 0 ? 'opacity-100' : 'opacity-0'}`}
            data-index={idx}
          />
        ))}
      </div>
      
      <!-- Controles del carrusel (siempre visibles si hay multiples imagenes) -->
      {hasMultipleImages && (
        <>
          <!-- Flechas de navegacion -->
          <button 
            class="carousel-prev absolute left-2 top-1/2 -translate-y-1/2 w-8 h-8 bg-white/90 rounded-full flex items-center justify-center hover:bg-white transition-colors shadow-md z-10"
            data-carousel={cardId}
            aria-label="Anterior"
          >
            <svg class="w-4 h-4 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          </button>
          <button 
            class="carousel-next absolute right-2 top-1/2 -translate-y-1/2 w-8 h-8 bg-white/90 rounded-full flex items-center justify-center hover:bg-white transition-colors shadow-md z-10"
            data-carousel={cardId}
            aria-label="Siguiente"
          >
            <svg class="w-4 h-4 text-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </button>
          
          <!-- Indicadores -->
          <div class="absolute bottom-2 left-1/2 -translate-x-1/2 flex gap-1.5 z-10">
            {project.images.map((_, idx) => (
              <button 
                class={`carousel-dot w-2 h-2 rounded-full transition-all shadow-sm ${idx === 0 ? 'bg-white' : 'bg-white/50'}`}
                data-carousel={cardId}
                data-index={idx}
                aria-label={`Imagen ${idx + 1}`}
              />
            ))}
          </div>
        </>
      )}
    </div>
  )}
  
  <!-- Contenido -->
  <div class="flex-1 flex flex-col min-h-0">
    <h3 class="font-bold text-foreground group-hover:text-primary transition-colors text-lg mb-2 line-clamp-1">
      {project.title}
    </h3>

    <p class="text-foreground/70 text-sm mb-4 flex-1 line-clamp-3">
      {project.description}
    </p>
    
    <!-- Tags -->
    <div class="flex flex-wrap gap-1.5 mb-4">
      {project.tags.slice(0, 4).map((tag: string) => (
        <span class="px-2 py-1 bg-primary/10 text-foreground rounded-lg text-xs font-medium border border-primary/20">
          {tag}
        </span>
      ))}
      {project.tags.length > 4 && (
        <span class="px-2 py-1 text-foreground/50 text-xs">
          +{project.tags.length - 4}
        </span>
      )}
    </div>

    <!-- Links (siempre visibles abajo) - muestra 'Privado' si no hay repo -->
    <div class="flex gap-2 mt-auto pt-2 border-t border-foreground/10">
      {project.link ? (
        <a 
          href={project.link} 
          target="_blank"
          class="flex items-center gap-1.5 px-3 py-1.5 bg-foreground text-white rounded-lg text-xs font-medium hover:bg-primary transition-colors"
        >
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          Demo
        </a>
      ) : null}

      {project.web ? (
        <a 
          href={project.web} 
          target="_blank"
          class="flex items-center gap-1.5 px-3 py-1.5 bg-primary text-white rounded-lg text-xs font-medium hover:bg-primary/80 transition-colors"
        >
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
          </svg>
          Web
        </a>
      ) : null}

      {project.repo ? (
        <a 
          href={project.repo} 
          target="_blank"
          class="flex items-center gap-1.5 px-3 py-1.5 bg-foreground/10 text-foreground rounded-lg text-xs font-medium hover:bg-foreground/20 transition-colors"
        >
          <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Codigo
        </a>
      ) : (
        <button
          class="flex items-center gap-1.5 px-3 py-1.5 bg-foreground/10 text-foreground rounded-lg text-xs font-medium cursor-not-allowed opacity-60"
          title="Repositorio privado"
          aria-disabled="true"
        >
          <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Privado
        </button>
      )}
    </div>
  </div>
</article>

<script is:inline>
  // Carousel functionality
  document.addEventListener('DOMContentLoaded', () => {
    const carousels = document.querySelectorAll('[id^="carousel-"]');
    
    carousels.forEach(carousel => {
      const slides = carousel.querySelectorAll('.carousel-slide');
      const dots = carousel.querySelectorAll('.carousel-dot');
      const prevBtn = carousel.querySelector('.carousel-prev');
      const nextBtn = carousel.querySelector('.carousel-next');
      
      if (slides.length <= 1) return;
      
      let currentIndex = 0;
      
      function showSlide(index) {
        slides.forEach((slide, i) => {
          slide.classList.toggle('opacity-100', i === index);
          slide.classList.toggle('opacity-0', i !== index);
        });
        dots.forEach((dot, i) => {
          dot.classList.toggle('bg-white', i === index);
          dot.classList.toggle('bg-white/50', i !== index);
        });
        currentIndex = index;
      }
      
      function nextSlide() {
        showSlide((currentIndex + 1) % slides.length);
      }
      
      function prevSlide() {
        showSlide((currentIndex - 1 + slides.length) % slides.length);
      }
      
      if (prevBtn) prevBtn.addEventListener('click', (e) => { e.preventDefault(); e.stopPropagation(); prevSlide(); });
      if (nextBtn) nextBtn.addEventListener('click', (e) => { e.preventDefault(); e.stopPropagation(); nextSlide(); });
      
      dots.forEach((dot, i) => {
        dot.addEventListener('click', (e) => { e.preventDefault(); e.stopPropagation(); showSlide(i); });
      });
    });
  });
</script>
