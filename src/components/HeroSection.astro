---
import HeroNavBar from './HeroNavBar.astro';

const { title, subtitle, buttonText, avatarUrl } = Astro.props;
---

<section id="inicio" class="pt-4 pb-6">
  <HeroNavBar />
  
  <!-- Bento Grid Hero -->
  <div class="grid grid-cols-1 md:grid-cols-6 lg:grid-cols-12 gap-4 mt-4">
    
    <!-- Avatar Box -->
    <div class="md:col-span-3 lg:col-span-3 lg:row-span-2 bento-box flex items-center justify-center p-6 animate-in" style="animation-delay: 0.1s;">
      <div class="relative">
        <div class="w-36 h-36 md:w-44 md:h-44 rounded-2xl overflow-hidden border-2 border-primary/20">
          <img
            src={avatarUrl}
            alt="Avatar"
            class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
          />
        </div>
        <div class="absolute -bottom-2 -right-2 w-5 h-5 bg-primary rounded-full border-3 border-white"></div>
      </div>
    </div>

    <!-- Nombre y Saludo -->
    <div class="md:col-span-3 lg:col-span-5 bento-box bento-accent animate-in p-6" style="animation-delay: 0.15s;">
      <span class="text-primary font-medium text-lg">Hola! Soy</span>
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-foreground mt-2 leading-tight">
        {title}
      </h1>
    </div>

    <!-- Rol -->
    <div class="md:col-span-3 lg:col-span-4 bento-box animate-in p-6" style="animation-delay: 0.2s;">
      <div class="flex items-center gap-2 mb-2">
        <div class="w-2 h-2 bg-primary rounded-full"></div>
        <span class="text-foreground/60 text-sm font-medium uppercase tracking-wider">Rol</span>
      </div>
      <p class="text-foreground/80 text-lg leading-relaxed">
        {subtitle}
      </p>
    </div>

    <!-- Tech Stack -->
    <div class="md:col-span-4 lg:col-span-5 bento-box animate-in p-6" style="animation-delay: 0.25s;">
      <div class="flex items-center gap-2 mb-3">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
        </svg>
        <span class="text-foreground/60 text-sm font-medium uppercase tracking-wider">Stack Principal</span>
      </div>
      <div class="flex flex-wrap gap-2">
        {['TypeScript', 'React', 'Astro', 'Python', 'SQL', 'Supabase'].map((tech) => (
          <span class="px-3 py-1.5 bg-primary/10 text-foreground rounded-lg text-sm font-medium border border-primary/20">
            {tech}
          </span>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="md:col-span-2 lg:col-span-4 bento-box bento-highlight flex items-center justify-center animate-in p-6" style="animation-delay: 0.3s;">
      <a
        href="#contacto"
        class="w-full px-6 py-3 text-center font-semibold text-white bg-foreground rounded-xl
               transition-all duration-300 hover:bg-primary hover:scale-[1.02]"
      >
        {buttonText}
      </a>
    </div>

  </div>
</section>

<script is:inline>
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', (e) => {
      e.preventDefault();
      const targetId = anchor.getAttribute('href');
      const targetElement = document.querySelector(targetId);
      
      if (targetElement) {
        targetElement.scrollIntoView({ 
          behavior: 'smooth',
          block: 'start' 
        });
        history.pushState(null, null, targetId);
      }
    });
  });
</script>
