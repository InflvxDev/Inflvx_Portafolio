---
const links = [
  { name: "Experiencia", path: "#experiencia" },
  { name: "Proyectos", path: "#proyectos" },
  { name: "Contacto", path: "#contacto" },
];
---

<!-- Barra de navegacion estilo Bento -->
<nav class="bento-box flex flex-col md:flex-row justify-between items-center gap-4 py-3 px-6">
  <!-- Logo -->
  <a href="#inicio" class="text-foreground text-xl font-bold hover:text-primary transition-colors">
    InflvxDev
  </a>
  
  <!-- Links de navegacion -->
  <ul class="flex items-center gap-2">
    {links.map((link) => (
      <li>
        <a 
          href={link.path} 
          class="px-4 py-2 text-foreground/70 hover:text-foreground hover:bg-foreground/5 rounded-xl transition-all text-sm font-medium"
        >
          {link.name}
        </a>
      </li>
    ))}
  </ul>
</nav>