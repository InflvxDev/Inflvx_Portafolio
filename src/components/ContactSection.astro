---

<section id="contacto" class="py-8 pb-6">
  <!-- Grid Bento de contacto compacto -->
  <div class="grid grid-cols-2 md:grid-cols-12 gap-3">
    
    <!-- Titulo -->
    <div class="col-span-2 md:col-span-5 bento-box bento-accent animate-in p-4">
      <div class="flex items-center gap-2 mb-2">
        <div class="w-8 h-8 bg-primary/20 rounded-lg flex items-center justify-center">
          <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <span class="text-foreground/60 text-xs font-medium uppercase tracking-wider">Contacto</span>
      </div>
      <h2 class="text-2xl md:text-3xl font-bold text-foreground">
        Hablemos!
      </h2>
    </div>

    <!-- Email -->
    <a 
      href="mailto:sebastian8a002@hotmail.com?subject=Contacto desde portafolio"
      class="col-span-2 md:col-span-4 bento-box group hover:border-primary/40 animate-in p-4"
      style="animation-delay: 0.1s"
    >
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-primary/20 transition-colors">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={socialLinks[0].icon}></path>
          </svg>
        </div>
        <div class="min-w-0">
          <span class="text-foreground font-medium text-sm block group-hover:text-primary transition-colors">
            Email
          </span>
          <span class="text-foreground/60 text-xs truncate block">
            {socialLinks[0].description}
          </span>
        </div>
      </div>
    </a>

    <!-- GitHub -->
    <a 
      href={socialLinks[1].url}
      target="_blank"
      rel="noopener noreferrer"
      class="col-span-1 md:col-span-1 bento-box group hover:border-foreground/30 flex items-center justify-center animate-in p-3"
      style="animation-delay: 0.15s"
    >
      <div class="text-center">
        <svg class="w-6 h-6 text-foreground group-hover:text-primary transition-colors mx-auto" fill="currentColor" viewBox="0 0 24 24">
          <path d={socialLinks[1].icon}></path>
        </svg>
        <span class="text-foreground text-[10px] mt-1 block group-hover:text-primary transition-colors">
          GitHub
        </span>
      </div>
    </a>

    <!-- LinkedIn -->
    <a 
      href={socialLinks[2].url}
      target="_blank"
      rel="noopener noreferrer"
      class="col-span-1 md:col-span-2 bento-box group hover:border-primary/40 flex items-center justify-center animate-in p-3"
      style="animation-delay: 0.2s"
    >
      <div class="text-center">
        <svg class="w-6 h-6 text-foreground group-hover:text-primary transition-colors mx-auto" fill="currentColor" viewBox="0 0 24 24">
          <path d={socialLinks[2].icon}></path>
        </svg>
        <span class="text-foreground text-[10px] mt-1 block group-hover:text-primary transition-colors">
          LinkedIn
        </span>
      </div>
    </a>

    <!-- Disponibilidad -->
    <div class="col-span-1 md:col-span-6 bento-box bento-highlight animate-in p-4" style="animation-delay: 0.25s">
      <div class="flex items-center gap-2">
        <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
        <span class="text-foreground font-medium text-sm">Disponible</span>
      </div>
      <p class="text-foreground/60 text-xs mt-1">
        Aceptando proyectos y colaboraciones
      </p>
    </div>

    <!-- Ubicacion -->
    <div class="col-span-1 md:col-span-6 bento-box animate-in p-4" style="animation-delay: 0.3s">
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="text-foreground font-medium text-sm">Colombia</span>
      </div>
      <p class="text-foreground/60 text-xs mt-1">
        Trabajo remoto global
      </p>
    </div>

  </div>
</section>
